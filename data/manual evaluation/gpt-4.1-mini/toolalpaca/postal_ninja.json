{
    "name": "Postal Ninja",
    "description": "Official Postal Ninja tracking API for developers",
    "api_methods": [
        {
            "name": "createTrack",
            "description": "Returns ID of newly created package (status=CREATED) or stored ID if this tracking number already exists (status=FOUND).",
            "parameters": [
                {
                    "name": "trackCode",
                    "type": "STRING",
                    "description": "Tracking number",
                    "default": "",
                    "required": true
                },
                {
                    "name": "ds",
                    "type": "STRING",
                    "description": "Carrier ID (optional)",
                    "default": "",
                    "required": false
                },
                {
                    "name": "destCountry",
                    "type": "STRING",
                    "description": "Optional destination country code (ISO 3166-1 alpha-2)",
                    "default": "",
                    "required": false
                }
            ],
            "utterances": [
                {
                    "utterance": "Can you add the tracking number LX123456789CN for my package coming from China to the system?",
                    "parameters": {
                        "trackCode": "LX123456789CN",
                        "destCountry": "CN"
                    }
                },
                {
                    "utterance": "Please register the parcel with tracking code 9400110898825022579493 and specify the carrier as USPS.",
                    "parameters": {
                        "trackCode": "9400110898825022579493",
                        "ds": "USPS"
                    }
                },
                {
                    "utterance": "I want to track the shipment with code RF123456789DE going to Germany; can you create a tracking entry for it?",
                    "parameters": {
                        "trackCode": "RF123456789DE",
                        "destCountry": "DE"
                    }
                },
                {
                    "utterance": "Add the tracking number 1234567890JP to the system without specifying the carrier.",
                    "parameters": {
                        "trackCode": "1234567890JP"
                    }
                },
                {
                    "utterance": "Could you save the package with tracking code 1Z999AA10123456784 and carrier UPS for me?",
                    "parameters": {
