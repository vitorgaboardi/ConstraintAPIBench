                {
                    "name": "start_year",
                    "type": "NUMBER",
                    "description": "Enter any year between 1970 to 2020 to get results.",
                    "default": "1970",
                    "required": false
                },
                {
                    "name": "page",
                    "type": "NUMBER",
                    "description": "",
                    "default": "1",
                    "required": false
                },
                {
                    "name": "max_imdb",
                    "type": "NUMBER",
                    "description": "",
                    "default": "7.8",
                    "required": false
                },
                {
                    "name": "type",
                    "type": "STRING",
                    "description": "Enter type 'movie' or 'show'",
                    "default": "movie",
                    "required": false
                },
                {
                    "name": "sort",
                    "type": "STRING",
                    "description": "Enter values highestrated , lowestrated , latest , oldest to  sort results accodingly .",
                    "default": "latest",
                    "required": false
                },
                {
                    "name": "min_imdb",
