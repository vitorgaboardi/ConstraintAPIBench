{
    "name": "Foreca Weather",
    "description": "Everything you need to build a weather app",
    "url": "https://rapidapi.com/foreca-ltd-foreca-ltd-default/api/foreca-weather/",
    "api_methods": [
        {
            "name": "Daily",
            "description": "Daily forecast.",
            "url": "https://foreca-weather.p.rapidapi.com/forecast/daily/{location}",
            "parameters": [
                {
                    "name": "location",
                    "type": "string",
                    "description": "",
                    "default": "102643743",
                    "required": true
                },
                {
                    "name": "alt",
                    "type": "NUMBER",
                    "description": "Altitude (meters)",
                    "default": "0",
                    "required": false
                },
                {
                    "name": "dataset",
                    "type": "STRING",
                    "description": "Variable set",
                    "default": "full",
                    "required": false
                },
                {
                    "name": "tempunit",
                    "type": "STRING",
                    "description": "Temperature unit in response",
                    "default": "C",
                    "required": false
                },
                {
                    "name": "windunit",
                    "type": "STRING",
                    "description": "Wind speed unit in response.",
                    "default": "MS",
                    "required": false
                },
                {
                    "name": "periods",
                    "type": "NUMBER",
                    "description": "Number of time steps (default 8, maximum 12)",
                    "default": "8",
                    "required": false
                }
            ],
            "utterances": [
                {
                    "utterance": "Can you show me the 5-day weather forecast for Paris in Celsius?",
                    "parameters": {
                        "location": "Paris",
                        "periods": 5,
                        "tempunit": "C"
                    }
                },
                {
                    "utterance": "I want to know the daily weather for Tokyo for the next week, but give me the temperatures in Fahrenheit.",
                    "parameters": {
                        "location": "Tokyo",
                        "periods": 7,
                        "tempunit": "F"
                    }
                },
                {
                    "utterance": "Tell me what the weather will be like in Cape Town for the next 3 days, and use kilometers per hour for wind speed.",
                    "parameters": {
                        "location": "Cape Town",
                        "periods": 3,
                        "windunit": "KMH"
                    }
                },
                {
                    "utterance": "Give me the full daily forecast for Sydney for the next 8 days.",
                    "parameters": {
                        "location": "Sydney",
                        "periods": 8,
                        "dataset": "full"
                    }
                },
                {
                    "utterance": "How will the weather look in Denver at an altitude of 1600 meters for the next 4 days?",
                    "parameters": {
                        "location": "Denver",
                        "alt": 1600,
                        "periods": 4
                    }
                },
                {
                    "utterance": "List the daily weather predictions for Rome for the next 6 days, and make sure the wind speed is in miles per hour.",
                    "parameters": {
                        "location": "Rome",
                        "periods": 6,
                        "windunit": "MPH"
                    }
                },
                {
                    "utterance": "Could you provide the daily weather outlook for Mumbai for the next 10 days?",
                    "parameters": {
                        "location": "Mumbai",
                        "periods": 10
                    }
                },
                {
                    "utterance": "Show me the daily forecast for Vancouver for the next 12 days, using Celsius and meters per second for wind.",
                    "parameters": {
                        "location": "Vancouver",
                        "periods": 12,
                        "tempunit": "C",
                        "windunit": "MS"
                    }
                },
                {
                    "utterance": "I need the daily weather for Zurich for the next 2 days, but only the basic dataset.",
                    "parameters": {
                        "location": "Zurich",
                        "periods": 2,
                        "dataset": "basic"
                    }
                },
                {
                    "utterance": "What\u2019s the 7-day weather forecast for Buenos Aires, with temperatures in Celsius and wind speed in kilometers per hour?",
                    "parameters": {
                        "location": "Buenos Aires",
                        "periods": 7,
                        "tempunit": "C",
                        "windunit": "KMH"
                    }
                }
            ]
        }
    ]
}