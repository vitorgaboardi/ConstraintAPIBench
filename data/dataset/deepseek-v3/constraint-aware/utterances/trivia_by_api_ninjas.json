{
    "name": "Trivia by API-Ninjas",
    "description": "Access endless trivia question and answers. See more info at https://api-ninjas.com/api/trivia.",
    "url": "https://rapidapi.com/apininjas/api/trivia-by-api-ninjas/",
    "api_methods": [
        {
            "name": "/v1/trivia",
            "description": "API Ninjas Trivia API endpoint",
            "url": "https://trivia-by-api-ninjas.p.rapidapi.com/v1/trivia",
            "parameters": [
                {
                    "name": "limit",
                    "type": "NUMBER",
                    "description": "How many results to return. Must be between **1** and **30**. Default is **1**.",
                    "default": "",
                    "required": false,
                    "constraints": {
                        "values": {
                            "max": 30,
                            "min": 1
                        },
                        "technical": true
                    }
                },
                {
                    "name": "category",
                    "type": "STRING",
                    "description": "Category of trivia. Possible values are: \n\n**artliterature\nlanguage\nsciencenature\ngeneral\nfooddrink\npeopleplaces\ngeography\nhistoryholidays\nentertainment\ntoysgames\nmusic\nmathematics\nreligionmythology\nsportsleisure**",
                    "default": "",
                    "required": false,
                    "constraints": {
                        "values": {
                            "enumerated": [
                                "artliterature",
                                "language",
                                "sciencenature",
                                "general",
                                "fooddrink",
                                "peopleplaces",
                                "geography",
                                "historyholidays",
                                "entertainment",
                                "toysgames",
                                "music",
                                "mathematics",
                                "religionmythology",
                                "sportsleisure"
                            ]
                        }
                    }
                }
            ],
            "utterances": [
                {
                    "utterance": "Can you give me a trivia question about science and nature?",
                    "parameters": {
                        "category": "sciencenature"
                    }
                },
                {
                    "utterance": "I'd like to test my knowledge with a question from the history and holidays category.",
                    "parameters": {
                        "category": "historyholidays"
                    }
                },
                {
                    "utterance": "Do you have any trivia related to food and drink?",
                    "parameters": {
                        "category": "fooddrink"
                    }
                },
                {
                    "utterance": "Could you provide a general trivia question?",
                    "parameters": {
                        "category": "general"
                    }
                },
                {
                    "utterance": "I'm interested in a trivia question about music.",
                    "parameters": {
                        "category": "music"
                    }
                },
                {
                    "utterance": "Can you find me a trivia question about geography?",
                    "parameters": {
                        "category": "geography"
                    }
                },
                {
                    "utterance": "I'd like a trivia question from the entertainment category.",
                    "parameters": {
                        "category": "entertainment"
                    }
                },
                {
                    "utterance": "Do you have any trivia questions about sports and leisure?",
                    "parameters": {
                        "category": "sportsleisure"
                    }
                },
                {
                    "utterance": "Could you give me a trivia question related to art and literature?",
                    "parameters": {
                        "category": "artliterature"
                    }
                },
                {
                    "utterance": "I'm curious about a trivia question from the religion and mythology category.",
                    "parameters": {
                        "category": "religionmythology"
                    }
                }
            ]
        }
    ]
}