{
    "name": "OTT details",
    "description": "Get Streaming details of Movie and TV Shows. We support 150+ Streaming platforms in US and India such as HBO, YouTube, Netflix , Primve Video, Hotstar, Hulu, etc . (use our OTT Providers endpoint to get the full list OTT providers we support) . In additon to streaming info we also provide basic details on any given movie title. ",
    "url": "https://rapidapi.com/gox-ai-gox-ai-default/api/ott-details/",
    "api_methods": [
        {
            "name": "Advanced Search",
            "description": "This endpoint allows you to search for a movie or tvshow based on various parameters such as release year , imdb rating , genre , language etc.",
            "url": "https://ott-details.p.rapidapi.com/advancedsearch",
            "parameters": [
                {
                    "name": "start_year",
                    "type": "NUMBER",
                    "description": "Enter any year between 1970 to 2020 to get results.",
                    "default": "1970",
                    "required": false,
                    "constraints": {
                        "values": {
                            "min": 1970,
                            "max": 2020
                        }
                    }
                },
                {
                    "name": "page",
                    "type": "NUMBER",
                    "description": "",
                    "default": "1",
                    "required": false,
                    "constraints": {
                        "technical": true
                    }
                },
                {
                    "name": "max_imdb",
                    "type": "NUMBER",
                    "description": "",
                    "default": "7.8",
                    "required": false,
                    "constraints": {
                        "technical": true
                    }
                },
                {
                    "name": "type",
                    "type": "STRING",
                    "description": "Enter type 'movie' or 'show'",
                    "default": "movie",
                    "required": false,
                    "constraints": {
                        "values": {
                            "enumerated": [
                                "movie",
                                "show"
                            ]
                        }
                    }
                },
                {
                    "name": "sort",
                    "type": "STRING",
                    "description": "Enter values highestrated , lowestrated , latest , oldest to  sort results accodingly .",
                    "default": "latest",
                    "required": false,
                    "constraints": {
                        "values": {
                            "enumerated": [
                                "highestrated",
                                "lowestrated",
                                "latest",
                                "oldest"
                            ]
                        }
                    }
                },
                {
                    "name": "min_imdb",
                    "type": "NUMBER",
                    "description": "",
                    "default": "6",
                    "required": false,
                    "constraints": {
                        "technical": true
                    }
                },
                {
                    "name": "genre",
                    "type": "STRING",
                    "description": "use comma seperated values to enter multiple genre eg : action,horror",
                    "default": "action",
                    "required": false,
                    "constraints": {}
                },
                {
                    "name": "language",
                    "type": "STRING",
                    "description": "use comma seperated values to enter multiple values , eg : english,german",
                    "default": "english",
                    "required": false,
                    "constraints": {}
                },
                {
                    "name": "end_year",
                    "type": "NUMBER",
                    "description": "Enter any year from 1970 to 2020 to  get results.",
                    "default": "2020",
                    "required": false,
                    "constraints": {
                        "values": {
                            "min": 1970,
                            "max": 2020
                        }
                    }
                }
            ]
        },
        {
            "name": "Basic Info",
            "description": "Get info on a  cast such as name , profession , birth and death year , bio , poster , best titles  etc.",
            "url": "https://ott-details.p.rapidapi.com/getcastDetails",
            "parameters": [
                {
                    "name": "peopleid",
                    "type": "STRING",
                    "description": "",
                    "default": "nm0000375",
                    "required": true,
                    "constraints": {
                        "id": true
                    }
                }
            ]
        },
        {
            "name": "Params",
            "description": "Get array of values that can be used as params in Advanced Search .",
            "url": "https://ott-details.p.rapidapi.com/getParams",
            "parameters": [
                {
                    "name": "param",
                    "type": "STRING",
                    "description": "input 'genre' or 'language' to get array of genre or languages that can be used as filter in advanced search .",
                    "default": "genre",
                    "required": true,
                    "constraints": {
                        "values": {
                            "enumerated": [
                                "genre",
                                "language"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Search",
            "description": "This endpoint allows you to search for a movie or tvshow based on the given 'title '.",
            "url": "https://ott-details.p.rapidapi.com/search",
            "parameters": [
                {
                    "name": "title",
                    "type": "STRING",
                    "description": "",
                    "default": "Endgame",
                    "required": true,
                    "constraints": {}
                },
                {
                    "name": "page",
                    "type": "NUMBER",
                    "description": "*Maximum number of pages returned is 10 ",
                    "default": "1",
                    "required": false,
                    "constraints": {
                        "values": {
                            "max": 10
                        },
                        "technical": true
                    }
                }
            ]
        },
        {
            "name": "Title Details",
            "description": "Get basic information on a movie or tv show such as imdbid , title , genre , runtime , imdbrating , language , synopsis , type , imageurl  , Streaming platforms info etc.",
            "url": "https://ott-details.p.rapidapi.com/gettitleDetails",
            "parameters": [
                {
                    "name": "imdbid",
                    "type": "STRING",
                    "description": "",
                    "default": "tt9904802",
                    "required": true,
                    "constraints": {
                        "id": true
                    }
                }
            ]
        },
        {
            "name": "Additional Title Details",
            "description": "Get  additional details for a movie or tv show like reviews  , quotes , plotsummary , number of votes , trailer url  , cast details etc.",
            "url": "https://ott-details.p.rapidapi.com/getadditionalDetails",
            "parameters": [
                {
                    "name": "imdbid",
                    "type": "STRING",
                    "description": "",
                    "default": "tt7286456",
                    "required": true,
                    "constraints": {
                        "id": true
                    }
                }
            ]
        },
        {
            "name": "OTT Providers",
            "description": "Get  information on OTT platforms we suuport .",
            "url": "https://ott-details.p.rapidapi.com/getPlatforms",
            "parameters": [
                {
                    "name": "region",
                    "type": "STRING",
                    "description": "currently only USA and India region is supported enter param 'US' for USA and 'IN' for India.",
                    "default": "IN",
                    "required": true,
                    "constraints": {
                        "values": {
                            "enumerated": [
                                "US",
                                "IN"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "New Arrivals",
            "description": "Get the latest arrivals from different platforms .",
            "url": "https://ott-details.p.rapidapi.com/getnew",
            "parameters": [
                {
                    "name": "region",
                    "type": "STRING",
                    "description": "Use 'IN' for India and 'US' for USA , * currently we support only US and Indian region.",
                    "default": "US",
                    "required": true,
                    "constraints": {
                        "values": {
                            "enumerated": [
                                "IN",
                                "US"
                            ]
                        }
                    }
                },
                {
                    "name": "page",
                    "type": "NUMBER",
                    "description": "",
                    "default": "1",
                    "required": false,
                    "constraints": {
                        "technical": true
                    }
                }
            ]
        }
    ]
}