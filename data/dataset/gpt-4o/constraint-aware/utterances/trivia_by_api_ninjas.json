{
    "name": "Trivia by API-Ninjas",
    "description": "Access endless trivia question and answers. See more info at https://api-ninjas.com/api/trivia.",
    "url": "https://rapidapi.com/apininjas/api/trivia-by-api-ninjas/",
    "api_methods": [
        {
            "name": "/v1/trivia",
            "description": "API Ninjas Trivia API endpoint",
            "url": "https://trivia-by-api-ninjas.p.rapidapi.com/v1/trivia",
            "parameters": [
                {
                    "name": "limit",
                    "type": "NUMBER",
                    "description": "How many results to return. Must be between **1** and **30**. Default is **1**.",
                    "default": "",
                    "required": false,
                    "constraints": {
                        "values": {
                            "max": 30,
                            "min": 1
                        }
                    }
                },
                {
                    "name": "category",
                    "type": "STRING",
                    "description": "Category of trivia. Possible values are: \n\n**artliterature\nlanguage\nsciencenature\ngeneral\nfooddrink\npeopleplaces\ngeography\nhistoryholidays\nentertainment\ntoysgames\nmusic\nmathematics\nreligionmythology\nsportsleisure**",
                    "default": "",
                    "required": false,
                    "constraints": {
                        "values": {
                            "enumerated": [
                                "artliterature",
                                "language",
                                "sciencenature",
                                "general",
                                "fooddrink",
                                "peopleplaces",
                                "geography",
                                "historyholidays",
                                "entertainment",
                                "toysgames",
                                "music",
                                "mathematics",
                                "religionmythology",
                                "sportsleisure"
                            ]
                        }
                    }
                }
            ],
            "utterances": [
                {
                    "utterance": "Give me a trivia question about art and literature.",
                    "parameters": {
                        "category": "artliterature"
                    }
                },
                {
                    "utterance": "Can you provide three trivia questions related to science and nature?",
                    "parameters": {
                        "limit": 3,
                        "category": "sciencenature"
                    }
                },
                {
                    "utterance": "I want a trivia question about food and drink.",
                    "parameters": {
                        "category": "fooddrink"
                    }
                },
                {
                    "utterance": "Show me five trivia questions from the general category.",
                    "parameters": {
                        "limit": 5,
                        "category": "general"
                    }
                },
                {
                    "utterance": "Give me a trivia question about geography.",
                    "parameters": {
                        "category": "geography"
                    }
                },
                {
                    "utterance": "Can you get me two trivia questions on history and holidays?",
                    "parameters": {
                        "limit": 2,
                        "category": "historyholidays"
                    }
                },
                {
                    "utterance": "I would like a trivia question about music.",
                    "parameters": {
                        "category": "music"
                    }
                },
                {
                    "utterance": "Fetch four trivia questions related to sports and leisure.",
                    "parameters": {
                        "limit": 4,
                        "category": "sportsleisure"
                    }
                },
                {
                    "utterance": "Please provide a trivia question about religion and mythology.",
                    "parameters": {
                        "category": "religionmythology"
                    }
                },
                {
                    "utterance": "Get me a trivia question from the entertainment category.",
                    "parameters": {
                        "category": "entertainment"
                    }
                }
            ]
        }
    ]
}