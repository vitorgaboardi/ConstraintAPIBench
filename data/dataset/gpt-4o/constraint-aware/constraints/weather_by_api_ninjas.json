{
    "name": "Weather by API-Ninjas",
    "description": "Get the latest weather data for any region in the world. See more info at https://api-ninjas.com/api/weather.",
    "url": "https://rapidapi.com/apininjas/api/weather-by-api-ninjas/",
    "api_methods": [
        {
            "name": "/v1/weather",
            "description": "API Ninjas Weather API endpoint.",
            "url": "https://weather-by-api-ninjas.p.rapidapi.com/v1/weather",
            "parameters": [
                {
                    "name": "country",
                    "type": "STRING",
                    "description": "Country name.",
                    "default": "",
                    "required": false
                },
                {
                    "name": "lon",
                    "type": "STRING",
                    "description": "Longitude of desired location. If used, **lat** parameter must also be supplied.",
                    "default": "",
                    "required": false,
                    "constraints": {
                        "inter-dependency": "lon, lat: If lon is used, lat parameter must also be supplied."
                    }
                },
                {
                    "name": "zip",
                    "type": "NUMBER",
                    "description": "5-digit Zip code (United States only).",
                    "default": "",
                    "required": false,
                    "constraints": {
                        "values": {
                            "min": 10000,
                            "max": 99999
                        }
                    }
                },
                {
                    "name": "state",
                    "type": "STRING",
                    "description": "US state (United States only).",
                    "default": "",
                    "required": false
                },
                {
                    "name": "city",
                    "type": "STRING",
                    "description": "City name.",
                    "default": "Seattle",
                    "required": false
                },
                {
                    "name": "lat",
                    "type": "NUMBER",
                    "description": "Latitude of desired location. If used, **lon** parameter must also be supplied.",
                    "default": "",
                    "required": false,
                    "constraints": {
                        "inter-dependency": "lat, lon: If lat is used, lon parameter must also be supplied."
                    }
                }
            ]
        }
    ]
}