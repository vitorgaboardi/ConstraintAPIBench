    "url": "https://rapidapi.com/opencritic-opencritic-default/api/opencritic-api/",
    "api_methods": [
        {
            "name": "Reviews for Game (legacy fix)",
            "description": "Gets reviews for a specific Game ID. Uses /review/game/{id} for legacy support.",
            "url": "https://opencritic-api.p.rapidapi.com/review/game/{id}",
            "parameters": [
                {
                    "name": "id",
                    "type": "NUMBER",
                    "description": "",
                    "default": "463",
                    "required": true,
                    "constraints": {
                        "id": true
                    }
                },
                {
                    "name": "skip",
                    "type": "NUMBER",
                    "description": "",
                    "default": "20",
                    "required": false,
                    "constraints": {
                        "technical": true
                    }
                },
                {
                    "name": "sort",
                    "type": "ENUM",
                    "description": "Sorts reviews based on one of the following:\n\n- newest (newest reviews first, by publishedDate of the review)\n- oldest (oldest reviews first, by publishedDate of the review)\n- score-high (highest scoring reviews first, with unscored reviews last)\n- score-low (lowest scoring reviews first, with unscored reviews last)\n- popularity (based on publication popularity)\n- blend (reviews within the last 3.5 days first; otherwise, sort by popularity)",
                    "default": "",
                    "required": false,
                    "constraints": {
                        "values": {
                            "enumerated": [
                                "newest",
                                "oldest",
                                "score-high",
                                "score-low",
                                "popularity",
                                "blend"
                            ]
                        }
                    }
                }
            ]
        },
